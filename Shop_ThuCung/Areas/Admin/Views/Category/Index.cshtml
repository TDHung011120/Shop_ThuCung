@model PagedList.IPagedList<Shop_ThuCung.Models.Category>
@using PagedList.Mvc
@{
    ViewBag.Title = "quản lý danh sách thể loại";
    Layout = "~/Areas/Admin/Views/Shared/_layouts.cshtml";
}

@section Header{
    Category
}
<div>
    @using (Html.BeginForm("Index", "Category", FormMethod.Get, new { @class = "form-group" }))
    {
        <div class="row">
            <div class="col-sm-4 form form">
                <input type="text" name="keyWord" class="form-control" value="@ViewBag.keyWord" />
            </div>
            <div>
                <input type="submit" value="Search" class="btn btn-secondary" />
            </div>
        </div>
    }

    <table class="table table-bordered">
        <tr>
            <td>
                ID
            </td>
            <td>
                Name
            </td>
            <td>
                Meta Title
            </td>
            <td>
                Meta Descriptions
            </td>
            <td>
                ParentID
            </td>
            <td>
                DisplayOder
            </td>
            <td>
                Status
            </td>
            <td>
                #
            </td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.ID
                </td>
                <td>
                    @item.Name
                </td>

                <td>
                    @item.metaTitle
                </td>
                <td>
                    @item.MetaDescriptions
                </td>
                <td>
                    @item.ParentID
                </td>
                <td>
                    @item.DisplayOder
                </td>

                <td>
                    @(item.Status == true ? "Hoạt động" : "Khóa")
                </td>
                <td>
                    <a href="@Url.Action("Edit", new {ID=item.ID})" class="btn btn-success">Edit</a>
                    <a href="@Url.Action("Delete", new {ID=item.ID})" class="btn btn-danger" onclick="return confirm('Bạn có chắc xóa thể loại này?')">Delete</a>
                </td>
            </tr>
        }

    </table>
</div>

